{
  "branches": [
    {
      "name": "main",
      "prerelease": false
    },
    {
      "name": "develop",
      "prerelease": true,
      "channel": "beta"
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "docs",
            "release": false
          },
          {
            "type": "chore",
            "release": false
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "üéâ Features"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "perf",
              "section": "‚ö° Performance"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            },
            {
              "type": "style",
              "section": "üíÖ Styling"
            },
            {
              "type": "refactor",
              "section": "‚ôªÔ∏è Refactoring"
            },
            {
              "type": "test",
              "section": "‚úÖ Tests"
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "CHANGELOG.md"
          }
        ],
        "successComment": "üéâ This release is published to GitHub Container Registry (GHCR) as `${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:${nextRelease.version}`",
        "failComment": false
      }
    ]
  ]
}
